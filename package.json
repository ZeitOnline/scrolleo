{
	"name": "@zeitonline/scrolleo",
	"version": "1.0.0",
	"description": "Lightweight scrollytelling library using IntersectionObserver",
	"type": "module",
	"main": "./dist/scrolleo.js",
	"module": "./dist/scrolleo.js",
	"types": "./index.d.ts",
	"exports": {
		".": {
			"types": "./index.d.ts",
			"import": "./dist/scrolleo.js",
			"default": "./dist/scrolleo.js"
		}
	},
	"files": [
		"dist",
		"index.d.ts",
		"README.md",
		"LICENSE",
		"CHANGELOG.md"
	],
	"scripts": {
		"dev": "vite build --watch",
		"build": "vite build",
		"demo": "vite --open demo/index.html",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepublishOnly": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ZeitOnline/scrolleo.git"
	},
	"homepage": "https://github.com/ZeitOnline/scrolleo#readme",
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"scrollytelling",
		"scroll",
		"scroll-driven",
		"step",
		"interactive",
		"graphic",
		"observer",
		"IntersectionObserver",
		"enter",
		"exit",
		"view",
		"trigger"
	],
	"author": "ZeitOnline",
	"license": "MIT",
	"devDependencies": {
		"prettier": "^3.0.0",
		"vite": "^7.0.0"
	}
}
